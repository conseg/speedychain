{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start: localhost",
            "type": "shell",
            "command": "bundle exec jekyll serve --source '${workspaceFolder}/docs-src' --incremental --watch",
            "problemMatcher": []
        },
        {
            "label": "Deploy: PRD",
            "type": "shell",
            "command": "bundle exec jekyll build --source '${workspaceFolder}/docs-src' --destination '${workspaceFolder}/docs'; git add .; $version = Get-Date -UFormat '%Y%m%d%H%M%S'; $msg = ('Atualiza ambiente de produção - versão {0}' -f $version); git commit -m $msg; git push",
            "problemMatcher": []
        }
    ]
}